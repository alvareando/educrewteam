<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h2>Become a tutor</h2>
      <p>Tell us your experience as a tutor!</p>

      <%= simple_form_for @user, url: update_to_tutor_path, method: :patch do |f| %>
        <%= f.input :about, required: true, autofocus: true %>
        <%= f.button :submit, "Become a tutor", class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>
