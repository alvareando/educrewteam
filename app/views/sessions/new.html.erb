<div class='container background_creation_image' >
  <div class="suggest-title">

  <h1 style="text-align: center; padding: 15px;">New session</h1>
    <div class="suggest-form">
      <%= simple_form_for @session do |f| %>
        <%= f.input :title, class: "suggest-input" %>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :university  %>
          </div>
          <div class="col-xs-6">
            <%= f.input :subject, collection: Session::CATEGORIES %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :time, default: Time.parse('9:00'), minute_step: 15, value: "now" %>
          </div>
          <div class="col-xs-6">
            <%= f.input :date, selected: Date.today, start_year: Date.today.year, end_year: Date.today.year + 1 %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :duration %>
          </div>
          <div class="col-xs-6">
            <%= f.input :price %>
          </div>
        </div>
        <%= f.input :description, as: :text, input_html: { rows: "3" } %>
        <%= f.button :submit, "Add session", class: "add-session-btn sign-up-btn"  %>
      <% end %>
    </div>
  </div>
</div>
