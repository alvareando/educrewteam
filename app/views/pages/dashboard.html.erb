
<div class="container">
  <div class="dashboard-title">
    <h1 class="text-center">Student Dashboard</h1>
  </div>
  <div class="dashboard-info"></div>
    <div class="tab">
      <ul class="nav nav-tabs sessions-tabs" role="tablist">
        <li role="presentation" class="active session-tab"><a href="#upcoming-sessions" aria-controls="upcoming-sessions" role="tab" data-toggle="tab">Upcoming sessions (<%= @ongoing_sessions.count %>)</a></li>
        <li role="presentation" class="session-tab"><a href="#past-sessions" aria-controls="past-sessions" role="tab" data-toggle="tab">Past Sessions (<%= @over_sessions.count %>)</a></li>
    </div>
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="upcoming-sessions">
        <div class="row">
          <% if @ongoing_sessions.empty? %>
            <div class="empty-message">
              <em>No upcoming sessions yet!</em>
            </div>
          <% else %>
            <% @ongoing_sessions.each do |session| %>
              <div class="col-xs-6 col-sm-4 col-md-4">
                <%= link_to session_path(session) do %>
                <div class="card" style= "background: linear-gradient(to right,<%= session.get_color(session.subject) %>)">
                  <div class="card-top">
                    <div class="card-subject">
                      # <%= session.subject %>
                    </div>
                    <div class="card-avatar">
                      <%= image_tag session.tutor.picture, class: "small-card-avatar" %>
                    </div>
                      <div class="main-title">
                        <div class="card-title">
                          <%= session.title %>
                        </div>
                        <div class="card-university">
                          <%= session.university %>
                        </div>
                      </div>
                    </div>
                    <div class="card-details">
                      <div class="card-date-duration">
                        <div class="card-date flex-bottom">
                            <i class="fa fa-clock-o"></i><%= session.date.strftime("%A, %e %B") %> - <%= session.time.strftime("%H:%M") %>
                        </div>
                        <div class="card-duration flex-bottom">
                          <i class="fa fa-hourglass-half"></i> 3 hours
                        </div>
                      </div>
                      <div class="card-price">
                        <%= humanized_money_with_symbol(session.price) %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div role="tabpanel" class="tab-pane" id="past-sessions">
        <div class="row">
          <% if @over_sessions.empty? %>
            <div class="empty-message">
              <em>No past sessions yet!</em>
            </div>
          <% else %>
            <% @over_sessions.each do |session| %>
              <div class="col-xs-6 col-sm-4 col-md-4">
                <%= link_to session_path(session) do %>
                <div class="card" style= "background: linear-gradient(to right,<%= session.get_color(session.subject) %>)">
                  <div class="card-top">
                    <div class="card-subject">
                      # <%= session.subject %>
                    </div>
                    <div class="card-avatar">
                      <%= image_tag session.tutor.picture, class: "small-card-avatar" %>
                    </div>
                      <div class="main-title">
                        <div class="card-title">
                          <%= session.title %>
                        </div>
                        <div class="card-university">
                          <%= session.university %>
                        </div>
                      </div>
                    </div>
                    <div class="card-details">
                      <div class="card-date-duration">
                        <div class="card-date flex-bottom">
                            <i class="fa fa-clock-o"></i><%= session.date.strftime("%A, %e %B") %> - <%= session.time.strftime("%H:%M") %>
                        </div>
                        <div class="card-duration flex-bottom">
                          <i class="fa fa-hourglass-half"></i> 3 hours
                        </div>
                      </div>
                      <div class="card-price">
                        <%= humanized_money_with_symbol(session.price) %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

