// Specific CSS for your home-page
html, body{
  height:100%;
}

.homepage-banner {
  color: rgba(1,1,1,0.3);
  background-image: image-url("cover.png");
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

}

.title-homepage{
  text-align: center;
  font-size: 22px;
  padding-top:250px;
  padding-bottom: 50px;
  p{
    font-size:28px;
  }
}

.home-search-form{
  color:black;
  background-color:rgba(255,255,255, 0.2);
  text-align: inline;
  width: 70vw;
  height: 200px;
  margin: 0 auto;
  padding: 40px;
  box-shadow: 0 3px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

}

.home-submit-btn{
  // background-color: blue;
  font-family: Courier;
  color: white;
  opacity: 1;
}

.text-form{
  opacity: 0.7;
}

.text-form :active{
  opacity: 1;
}

.home-search-btn {
  padding: 20px;
  background-color : #ECE1DE;
  border-color:transparent;
  color: rgba(1,1,1,0.3);

}

.home-submit-btn{
  background-color: rgba(195,127,99,0.7);
  border-color:transparent;
}
.home-submit-btn:hover{
  color: white;
  background-color: #C37F63;
}

.home-search-form-two {
  display: flex;
  text-align: center;
  justify-content: space-around;
  width: 50vw;
  margin: 0 auto;
  padding-top: 30px;
}

.home-subject {
  flex: 0 0 50%;
}

.home-university {
  flex: 0 0 50%;
  border-left: solid 2px;
  border-left-color: rgba(151,151,151,0.3);
}
